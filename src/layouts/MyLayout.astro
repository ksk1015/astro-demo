---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div>Astro Demo</div>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
  }
  header {
    background-color: #333;
    color: white;
    padding: 1rem;
  }
  main {
    padding: 1rem;
  }
</style>
